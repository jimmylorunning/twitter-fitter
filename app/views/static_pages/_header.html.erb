<div class="jumbotron">
<div class="container">
  <h1><i class="fa fa-twitter"></i> TwitterFitter</h1>
  <%= form_tag('/', method: 'get', class: 'form-inline') do %>
    <div class="form-group">
    <%= label_tag(:twitter_handle, "@") %>
    <%= text_field_tag(:twitter_handle1, sanitize(@handle1), class: 'form-control') %>
    <%= label_tag(:twitter_handle2, "and @") %>
    <%= text_field_tag(:twitter_handle2, sanitize(@handle2), class: 'form-control') %>
    <%= submit_tag("Combine!", class: 'btn btn-custom') %>
    </div>
  <% end %>
</div>
</div>
